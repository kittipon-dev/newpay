    <link rel="stylesheet" href="/assets/css/app.css">
    <link rel="shortcut icon" href="images/neware.png" type="image/x-icon">
    <script>
        function jsonEscape(str) {
            return str.replace(/\n/g, "<br>").replace(/\r/g, "").replace(/\t/g, "\\\\t");
        }
        let data = '<%-JSON.stringify(data)%>'
        let dataUse = JSON.parse(jsonEscape('<%-JSON.stringify(dataUse)%>'));
        let dd = JSON.parse(jsonEscape(data));
    </script>
</head>

<body>
    <div id="app">
        <div id="sidebar" class='active'>
