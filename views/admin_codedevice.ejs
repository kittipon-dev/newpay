                        </li>



                    </ul>
                </div>
                <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
            </div>
        </div>
        <div id="main">

            <nav class="navbar navbar-header navbar-expand navbar-light" hidden>
                <a class="sidebar-toggler" href="#"><span class="navbar-toggler-icon"></span></a>
                <button class="btn navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </nav>

            <div class="main-content container-fluid">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">

                        </div>

                        <div class="card-body">
                            <div class="col-md-12 col-12">


                                <center>

                                    <h1 id="verUse"> </h1>

                                    <br>
                                    <br>

                                    <div class="col-md-6 mb-1">
                                        <form action="/admin/uploadfilecode" method="post"
                                            enctype="multipart/form-data">

                                            <div class="input-group mb-3">
                                                <span class="input-group-text">Version </span>
                                                <input type="text" class="form-control" name="ver">
                                            </div>

                                            <textarea class="form-control" rows="3" placeholder="Description"
                                                name="description"></textarea>
                                            <br>

                                            <input type="file" style="float: left;" class="custom-file-input"
                                                name="file" id="file">

                                            <button type="submit" class="btn btn-outline-warning"
                                                style="float: right;">upload</button>

                                        </form>
                                    </div>

                                    <br>
                                    <br>
                                    <br>

                                    <div class="col-md-8 mb-1">
                                        <!-- Table with outer spacing -->
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Version</th>
                                                        <th>Date</th>
                                                        <th>Description</th>
                                                        <th>Status</th>
                                                        <th> </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <script>
                                                        dd.forEach(e => {
                                                            //  const time = parseInt(e.date);
                                                            //  const ts = new Date(time);
                                                            document.write(`
                                                    <tr>
                                                        <td class="text-bold-500">${e.ver}</td>
                                                        <td>${e.date}</td>
                                                        <td class="text-bold-500" style="white-space:pre-wrap;">${e.description}</td>
                                                        <td class="text-bold-500">${e.status}</td>
                                                        <td>
                                                            <a href="/admin/del_code_ver?ver=${e.ver}"><i data-feather="trash-2" width="20"></i></a>
                                                            <a class="btn btn-outline-info" href="/admin/use_code_ver?ver=${e.ver}">Use
                                                            </a>
                                                            <a type="button" class="btn btn-outline-success" href="/code_bin/${e.ver}.bin">Download
                                                            </a>
                                                        </td>
                                                    </tr>
                                                        `)
                                                        });
                                                    </script>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </center>

                            </div>
                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>

    <script>
        document.getElementById('verUse').innerText = dataUse.ver
    </script>



