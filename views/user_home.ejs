    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/javascript.util/0.12.12/javascript.util.min.js"></script>
    <script>


        var ctx = document.getElementById('chart1').getContext('2d');
        ctx.canvas.width = 1000;
        ctx.canvas.height = 300;

        let dataG = []
        let txtG = []

        let tD = 0
        let tM = 0
        let tA = 0

        getBalance()

        function getBalance() {
            axios
                .get("/ksher/AmountAll")
                .then(response => {
                    const data = response.data
                    document.getElementById('txtTD').innerText = data.d
                    document.getElementById('txtTM').innerText = data.m
                    document.getElementById('txtTA').innerText = data.total
                })
                .catch(err => {

                })
        }

        var cfg = {
            type: 'bar',
            data: {
                labels: txtG,
                datasets: [{
                    label: 'amount',
                    data: dataG,
                    backgroundColor: '#41B1F9',
                    borderColor: '#41B1F9',
                    borderWidth: 2,
                    pointBackgroundColor: '#FFFF',
                    pointBorderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        gridLines: {

                        }
                    }],
                    xAxes: [{
                        ticks: {
                            beginAtZero: true
                        },
                        barPercentage: 0.2,
                        gridLines: {
                            display: false
                        }
                    }]

                },

            }
        };


        var chart = new Chart(ctx, cfg);
        getGday()

        function t(t) {
            chart.clear()
            if (t == 'bar') {
                document.getElementById('btn_b').classList.add('btn-primary')
                document.getElementById('btn_l').classList.remove('btn-primary')
            } else if (t == 'line') {
                document.getElementById('btn_b').classList.remove('btn-primary')
                document.getElementById('btn_l').classList.add('btn-primary')
            }
            cfg.type = t
            chart.update()
        }
        function getGday() {
            axios
                .get("/ksher/GraphAllDay")
                .then(response => {
                    const data = response.data
                    dataG = []
                    txtG = []
                    for (let index = 0; index < data.length; index++) {
                        dataG[index] = data[index].amount
                        txtG[index] = data[index].d + "/" + data[index].m + "/" + data[index].y
                    }
                    updataG(dataG, txtG)
                    document.getElementById('d').classList.add('btn-primary')
                    document.getElementById('m').classList.remove('btn-primary')
                    document.getElementById('y').classList.remove('btn-primary')
                })
                .catch(err => {

                })
        }
        function getGmonth() {
            axios
                .get("/ksher/GraphAllMonth")
                .then(response => {
                    const data = response.data
                    dataG = []
                    txtG = []
                    for (let index = 0; index < data.length; index++) {
                        dataG[index] = data[index].amount
                        txtG[index] = data[index].m + "/" + data[index].y
                    }
                    updataG(dataG, txtG)
                    document.getElementById('m').classList.add('btn-primary')
                    document.getElementById('d').classList.remove('btn-primary')
                    document.getElementById('y').classList.remove('btn-primary')
                })
                .catch(err => {

                })
        }
        function getGyear() {
            axios
                .get("/ksher/GraphAllYear")
                .then(response => {
                    const data = response.data
                    dataG = []
                    txtG = []
                    for (let index = 0; index < data.length; index++) {
                        dataG[index] = data[index].amount
                        txtG[index] = data[index].y
                    }
                    updataG(dataG, txtG)
                    document.getElementById('y').classList.add('btn-primary')
                    document.getElementById('d').classList.remove('btn-primary')
                    document.getElementById('m').classList.remove('btn-primary')
                })
                .catch(err => {

                })
        }
        function updataG(d, t) {
            cfg.data.datasets[0].data = dataG
            cfg.data.labels = txtG
            chart.update()
        }


    </script>














